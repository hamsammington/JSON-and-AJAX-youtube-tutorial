
// Get Element from DOM based on its ID 
let bookList = document.getElementById("book-list");
console.log(bookList);

//Get Elements by class
let titles = document.getElementsByClassName('title')
console.log(titles);

//get the first index of this class
console.log(titles[0]);

//Get elements by Tag name
let lis = document.getElementsByTageName('li');	
console.log(lis) 

//you can cycle through the titles using a for loop
for (i=0; i<titles.length ; i++) {
console.log(titles[i])
}

//You can turn the HTML titles above into an array 
//first check if it is an array
console.log(Array.isArray(titles));
console.log(Array.isArray(Array.from(titles)));


Array.from(titles).forEach(function(item){
console.log(item);
})

